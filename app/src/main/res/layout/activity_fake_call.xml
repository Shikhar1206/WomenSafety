<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/tvIncoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming call"
        android:textSize="14sp"
        android:textColor="#9CA3AF"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgCaller"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_contact"
        android:tint="#D1D5DB"
        android:background="@drawable/bg_circle_grey"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvIncoming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCallerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mom"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgCaller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCallerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 94128 93028"
        android:textSize="16sp"
        android:textColor="#D1D5DB"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCallerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAnswer"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="48dp"
        app:cornerRadius="44dp"
        app:backgroundTint="#16A34A"
        app:icon="@drawable/ic_call"
        app:iconTint="@android:color/white"
        app:iconSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEndCall"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:contentDescription="Answer Call"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEndCall"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="48dp"
        app:cornerRadius="44dp"
        app:backgroundTint="#DC2626"
        app:icon="@drawable/ic_call_end"
        app:iconTint="@android:color/white"
        app:iconSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="End Call"/>

</androidx.constraintlayout.widget.ConstraintLayout>
