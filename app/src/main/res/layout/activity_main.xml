<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Smartify"
                android:gravity="center"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSOS"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="SOS"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="100dp"
        app:backgroundTint="#DC2626"
        app:icon="@drawable/ic_sos"
        app:iconTint="@android:color/white"
        app:iconSize="36dp"
        app:iconGravity="textTop"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake phone anytime to send SOS"
        android:textSize="13sp"
        android:textColor="#374151"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSOS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts"
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_contacts"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFakeCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fake Call"
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_call"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSiren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loud Siren"
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_siren"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSafeWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audio Detection"
                android:onClick=""
                android:layout_marginTop="12dp"
                app:icon="@drawable/ic_voice"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/cardActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto capture photos every 2 minutes"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchAutoCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
